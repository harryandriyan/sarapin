doctype html
html
    head
        title Sarapin - Temukan tempat Sarapan favoritmu
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/css/uikit.min.css')
        link(rel='stylesheet' href='/css/app.css')
        script(src='/js/jquery-3.1.1.min.js')
        script(src='/js/uikit.min.js')
        script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCbPVV9shFdT2wNeWPEjfq-LW-vOOwZuxw&libraries=places')
    body
        div
            div#container.uk-navbar-container.tm-navbar-container

                nav.uk-navbar-container.uk-margin(uk-navbar)
                    div.uk-navbar-left
                        a.uk-navbar-item.uk-logo(href='/')
                            img(src='/images/logo/sarapin.png' width='170')
                    div.uk-navbar-center
                        div.uk-navbar-item
                            form#explore-form.uk-grid.uk-grid-small
                                div.uk-width-1-3.uk-grid-margin.uk-first-column
                                    input#q.uk-input.uk-form-width-large(type='text' placeholder='Sarapan ... nasi ? roti ? kopi ?')
                                div.uk-width-1-3.uk-grid-margin
                                    input#address.uk-input.uk-form-width-large(type='text' placeholder='Cari di Kota')
                                div.uk-width-1-3.uk-grid-margin
                                    button#explore-button.uk-button.uk-button-default(type='button' disabled) Temukan
                    div.uk-navbar-right
                        ul.uk-navbar-nav
                            li#right-menu
                div#app(uk-grid)
                    div.uk-width-1-1
                        block content
                footer
                    div.footer
                        p Copyright &copy; 2017
        script(src='/js/app.js')
